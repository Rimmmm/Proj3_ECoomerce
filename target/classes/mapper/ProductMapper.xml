<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ProductMapper">
	<!-- 상품 리스트 보기 -->
	<select id="listProduct" resultType="proj.ecom.product.domain.ProductDTO">
		select * from ecommerce_product  where product_itemType=#{product_itemType} and product_sortType=#{product_sortType} order by product_id desc
	</select>
	
	<!-- 상품 자세히 보기 -->
	<select id="productDetail" resultType="proj.ecom.product.domain.ProductDTO">

		SELECT product_itemType, product_sortType, product_name, product_image, product_price 
		FROM ecommerce_product where product_id=#{product_id}
	</select>
	
	<!-- 상품 사이즈 및 수량 확인하기 -->
	<select id="productDetail2" resultType="proj.ecom.product.domain.ProductDTO">
		select product_size, product_quantity from ecommerce_productSize where product_id=#{product_id}
	</select>
	
	<select id="getTotalCount" resultType="Integer">
		select count(product_id) from ecommerce_product
	</select>
	
